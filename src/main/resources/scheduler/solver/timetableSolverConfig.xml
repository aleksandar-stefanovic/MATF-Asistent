    <scanAnnotatedClasses>
    </scanAnnotatedClasses>

    <!-- Definisanje funkcije za računanje rezultata -->
    <scoreDirectorFactory>
        <scoreDrl>scheduler/solver/ScoreRulesConfiguration.drl</scoreDrl>
    </scoreDirectorFactory>

    <!-- Informacije o solveru -->
