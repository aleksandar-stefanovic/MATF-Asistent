<?xml version="1.0" encoding="UTF-8" ?>
<solver>
    <!-- Definisanje modela -->
    <scanAnnotatedClasses>
    </scanAnnotatedClasses>

    <!-- Definisanje funkcije za računanje rezultata -->
    <scoreDirectorFactory>
        <scoreDrl>scheduler/solver/ScoreRulesConfiguration.drl</scoreDrl>
    </scoreDirectorFactory>

    <!-- Informacije o solveru -->
    <exhaustiveSearch>
        <exhaustiveSearchType>BRANCH_AND_BOUND</exhaustiveSearchType>
        <nodeExplorationType>DEPTH_FIRST</nodeExplorationType>
    </exhaustiveSearch>

    <termination>
        <minutesSpentLimit>1</minutesSpentLimit>
        <unimprovedMinutesSpentLimit>45</unimprovedMinutesSpentLimit>
    </termination>

</solver>